<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apps"
            android:id="@+id/btApps"
            android:layout_marginBottom="87dp"
            android:layout_above="@+id/btIntent"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/btSettings"
            android:layout_below="@+id/btIntent"
            android:layout_alignRight="@+id/btApps"
            android:layout_alignEnd="@+id/btApps" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intent"
            android:id="@+id/btIntent"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/btSettings"
            android:layout_alignStart="@+id/btSettings" />
    </RelativeLayout>

</LinearLayout>